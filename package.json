{
  "name": "medscheduler",
  "version": "1.0.0",
  "description": "Medical Shift Scheduler - Full Stack Application",
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "build": "cd frontend && bun run build",
    "start": "concurrently \"bun run start:frontend\" \"bun run start:backend\"",
    "start:frontend": "cd frontend && bun run preview",
    "start:backend": "cd backend && bun run start",
    "lint": "cd frontend && bun run lint",
    "install:all": "bun install --cwd frontend && bun install --cwd backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "keywords": ["medical", "scheduler", "shift", "fullstack"],
  "author": "Medical Shift Scheduler Team",
  "license": "MIT"
}